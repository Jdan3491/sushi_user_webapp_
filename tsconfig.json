{
  "compilerOptions": {
    "target": "ESNext", // Set the appropriate target (e.g., ES6, ESNext)
    "module": "ESNext", // or 'CommonJS', depending on your setup
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true, // Allow JS/JSX files
    "jsx": "react-jsx", // Enable JSX syntax in React
    "moduleResolution": "node",
    "resolveJsonModule": true, // To import JSON modules
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true, // Enable strict mode for better type checking
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"], // Includes all files in the src folder
  "exclude": ["node_modules"], // Excludes node_modules
  "files": [], // This can be left empty if you're using "include"
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
