{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,  // Set to allow file output
    "declaration": true,  // Emit declaration files (.d.ts)
    "declarationDir": "./dist/types",
    "jsx": "react-jsx",
    "outDir": "./dist/app",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "./tsconfig.app.json" }
  ]
}
